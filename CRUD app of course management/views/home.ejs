<%- include('layouts/main') %>

<div>
  <h1 class="cursor-pointer text-center pt-3 h-20 bg-gradient-to-r from-blue-900 to-gray-900 uppercase hover:bg-yellow-300 text-5xl font-serif font-thin subpixel-antialiased text-zinc-300 hover:text-zink-300 decoration-wavy">All Courses</h1>
  <p><br><br></p>

  <a class="btn text-white text-center bg-cyan-900 hover:bg-cyan-800" href="/create">Add new Course.</a>
  <p><br><br></p>
  <table style="background-color: #00539CFF; color: #EEA47FFF;" class="table border-double border-4 border-white mx-auto table-bordered text-center ">
    <thead>
      <tr  class="text-zinc-300">
        <th scope="col">Id</th>
        <th scope="col">Course_Name</th>
        <th scope="col">Duration</th>
        <th scope="col">Fees</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if(data.length){
      for(var i = 0; i < data.length; i++) {%>
      <tr>
        <th scope="row"><%= data[i].id%></th>
        <td><%= data[i].Course_name%></td>
        <td><%= data[i].Duration%></td>
        <td><%= data[i].Fees%></td>
        <td>
          <a href="/edit/<%= data[i].id%>" class="btn text-white bg-green-600 hover:bg-gray-700">Edit</a>
          <a href="/delete/<%= data[i].id%>" class="btn text-white bg-rose-700 hover:bg-gray-700">Delete</a>
        </td>
      </tr>
      <% }     
   }else{ %>
      <tr>
        <td colspan="10">No user</td>
      </tr>
      <% } %>

    </tbody>
  </table>

  </div>